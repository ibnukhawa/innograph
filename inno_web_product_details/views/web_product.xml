<odoo>
    <template id="product_details_inherit" inherit_id="theme_stoneware.product_details" name="Product Website">
        <xpath expr="//div/div/div/t/div/t/div[@class='item']" position="replace">
            <div class="item">
                <a t-att-href="website.image_url(pimg,'image')" class="slider-popup-product"/>
                <img class="img img-responsive sub-images" t-attf-src="/website/image/product.image/{{pimg.id}}/image/300x300" t-att-alt="pimg.name"/>
            </div>
        </xpath>
        <xpath expr="//ul[@class='nav nav-tabs product-tabs']/li[1]" position="after">
            <li role="presentation">
                 <a href="#installation_instruction" class="background-gray" aria-controls="more_info" role="tab" data-toggle="tab" >Petunjuk Pemasangan</a>
            </li>
            <li role="presentation">
                 <a href="#product_gallery" class="background-gray" aria-controls="more_info" role="tab" data-toggle="tab">Galeri Product</a>
            </li>
        </xpath>
        <xpath expr="//div[@id='more_info']" position='after'>
            <div role="tabpanel" class="tab-pane" id="installation_instruction">
                <div itemprop="description" t-field="product.installation_instructions" class="oe_structure mt16" id="product_full_description"/>
            </div>
            <div role="tabpanel" class="tab-pane acve" id="product_gallery">
                <div itemprop="description" t-field="product.product_gallery" class="oe_structure mt16" id="product_full_description"/>
            </div>
        </xpath>
        <xpath expr="//ul[@class='nav nav-tabs product-tabs']/li" position="before">
            <li role="presentation" class="active">
                 <a href="#detail_product" class="background-gray" aria-controls="detail_product" role="tab" data-toggle="tab">Detail Product</a>
            </li>
        </xpath>
        <xpath expr="//div[@id='more_info']" position='before'>
            <div role="tabpanel" class="tab-pane active" id="detail_product">
                <div itemprop="description" t-field="product.product_detail" class="oe_structure mt16" id="product_full_description"/>
            </div>
        </xpath>
        <xpath expr="//div[@class='pd-more-info']" position='after'>
          <t t-if="product.public_categ_ids">
            <div class="pd-more-info">
              <span t-field="product.public_categ_ids[0].description"/>
            </div>
          </t>
        </xpath>

    </template>

    <template id="website_sale_total_inherit" inherit_id="website_sale.cart_lines" name="Total website ecommerce">
        <xpath expr="//table[@id='cart_products']/tbody" position="after">
            <tfoot>
                <tr>
                    <td colspan="3" class="" style='border: none;'/>
                    <td class="text-right " style='border: none;'>
                        <span class="text-right text-muted">Subtotal:</span>
                    </td>
                    <td class="" style='border: none; text-align: left !important;'>
                        <span class="text-left text-muted">
                            <span t-field="website_sale_order.amount_untaxed" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}" />
                        </span>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" class="" style='border: none;'/>
                    <td class="text-right " style='border: none;'>
                        <span class="text-right text-muted" title="Taxes may be updated after providing shipping address"> Taxes:</span>
                    </td>
                    <td class="" style='border: none; text-align: left !important;'>
                        <span class="text-left text-muted">
                            <span t-field="website_sale_order.amount_tax" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'from_currency': website_sale_order.pricelist_id.currency_id, 'display_currency': website.currency_id}" />
                        </span>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" class="" style='border: none;'/>
                    <td class="text-right " style='border: none;'>
                        <span class="text-right h4">Total:</span>
                    </td>
                    <td style='border: none; text-align: left !important;'>
                        <span class="text-left h4" style="white-space: nowrap;">
                    <span t-field="website_sale_order.amount_total" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}" />
                        </span>
                    </td>
                </tr>
            </tfoot>
        </xpath>
        <xpath expr="//div[@class='js_cart_lines row']" position="replace">
            <div class="js_cart_lines row hidden">
                <t t-call="website_sale.total">
                    <t t-set='extra_class' t-value='"col-sm-4 col-sm-offset-8 col-xs-12"'/>
                </t>
            </div>
        </xpath>
    </template>
    <template id="website_sale_total_payment_inherit" inherit_id="website_sale.payment" name="Total payment website ecommerce">
        <xpath expr="//table[@id='cart_products']/tbody" position="after">
            <tfoot>
                <tr>
                    <td colspan="2" class="" style='border: none;'/>
                    <td class="text-right " style='border: none;'>
                        <span class="text-right text-muted">Subtotal:</span>
                    </td>
                    <td class="" style='border: none; text-align: left !important;'>
                        <span class="text-left text-muted">
                            <span t-field="website_sale_order.amount_untaxed" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}" />
                        </span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="" style='border: none;'/>
                    <td class="text-right " style='border: none;'>
                        <span class="text-right text-muted" title="Taxes may be updated after providing shipping address"> Taxes:</span>
                    </td>
                    <td class="" style='border: none; text-align: left !important;'>
                        <span class="text-left text-muted">
                            <span t-field="website_sale_order.amount_tax" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'from_currency': website_sale_order.pricelist_id.currency_id, 'display_currency': website.currency_id}" />
                        </span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="" style='border: none;'/>
                    <td class="text-right " style='border: none;'>
                        <span class="text-right h4">Total:</span>
                    </td>
                    <td style='border: none; text-align: left !important;'>
                        <span class="text-left h4" style="white-space: nowrap;">
                    <span t-field="website_sale_order.amount_total" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}" />
                        </span>
                    </td>
                </tr>
            </tfoot>
        </xpath>
        <xpath expr="//div[@id='wrap']/div[1]/div/div[2]/div[1]" position="replace">
            <div class="hidden">
                <t t-call="website_sale.total">
                    <t t-set='extra_class' t-value='"col-sm-4 col-sm-offset-8 col-xs-12"'/>
                </t>
            </div>
        </xpath>
    </template>

</odoo>
