<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    	<!-- For message / chatter -->
    	<record id="bom_revision_submitted" model="mail.message.subtype">
            <field name="name">Submitted</field>
            <field name="res_model">mrp.bom.revision</field>
            <field name="default" eval="True"/>
            <field name="description">BoM Revision Submitted. Waiting for Approval.</field>
        </record>

        <record id="bom_revision_approved" model="mail.message.subtype">
            <field name="name">Approved</field>
            <field name="res_model">mrp.bom.revision</field>
            <field name="default" eval="True"/>
            <field name="description">BoM Revision Approved</field>
        </record>

        <record id="bom_revision_cancel" model="mail.message.subtype">
            <field name="name">Cancelled</field>
            <field name="res_model">mrp.bom.revision</field>
            <field name="default" eval="True"/>
            <field name="description">BoM Revision Cancelled</field>
        </record>

        <record id="bom_revision_reject" model="mail.message.subtype">
            <field name="name">Rejected</field>
            <field name="res_model">mrp.bom.revision</field>
            <field name="default" eval="True"/>
            <field name="description">BoM Revision Rejected</field>
        </record>

        <!-- <record id="bom_revision_draft" model="mail.message.subtype">
            <field name="name">Set to Draft</field>
            <field name="res_model">mrp.bom.revision</field>
            <field name="default" eval="True"/>
            <field name="description">BoM Revision Set to Draft</field>
        </record> -->

        <record id="bom_revision_done" model="mail.message.subtype">
            <field name="name">Applied</field>
            <field name="res_model">mrp.bom.revision</field>
            <field name="default" eval="True"/>
            <field name="description">BoM Revision Applied</field>
        </record>
	</data>
</odoo>