<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="account.report_invoice_document">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="header">
                <div class="row">
                    <!-- All your custom code here -->
                    <img class="image" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="height: 62px; width: 240px; line-height:0px;" alt="Banner"/>
                </div>
            </div>
            <div class="page">
                    <style type="text/css">
                        table {
                            font-family: arial, sans-serif;
                            border-collapse: collapse;
                            width: 100%;
                        }

                        td, th {
                            border: 1px solid #000000;
                            text-align: left;
                            padding: 6px;
                        }

                        tr:nth-child(even) {
                            background-color: #dddddd;
                        }
                        .watermark {
                        position: absolute;
                        top: 2.5em; 
                        left: 1.8em;
                        z-index: -1;
                        background: none;
                        display: block;
                        color: #EEE;
                        font-size: 150px;
                        transform: rotate(340deg);
                        -webkit-transform: rotate(340deg);
                    }
                        </style>
                        <div class="row mt32 mb32" position="'fixed">
                        <br/>
                         <!-- Kop Surat -->
                <div style="font-size:13px; width:50%; solid black; height:110px; padding:7px; background-color:#E6E6E6; text-align:left;float:left">
                    <p style="font-size:13px">
                        <b>PT PROQUAMAN KONSULTAN</b><br/>
                        <span t-field="o.company_id.partner_id.street"/><br/>
                        <span t-field="o.company_id.partner_id.street2"/>
                        <span t-field="o.company_id.partner_id.city"/>
                        <span t-field="o.company_id.partner_id.state_id.name"/>
                        <span t-field="o.company_id.partner_id.zip"/><br/>
                        NPWP: <span t-field="o.company_id.partner_id.npwp"/><br/>
                    </p>
                </div>
                <div style="height:110px; width:20%; color: black; background-color: white; border: 0px solid black; padding: 5px; float:left"/>
                <div style="width: 30%; height:100px; padding:0px; background-color:white; text-align:right; float:left">
                    <t t-if="o.state == 'proforma' or o.state == 'proforma2' ">
                        <span align="center" style="font-size: 40px"><b>PRO-FORMA</b></span><br/>
                        <span align="center" style="font-size: 28px">NO : <t t-esc="o.proforma_nmbr"/></span><br/>
                    </t>
                    <t t-if="o.state!='proforma' and o.state!='proforma2' and o.type == 'out_invoice' and o.journal_id.code == 'LL'">
                        <span align="center" style="font-size: 41px"><b>I N V O I C E</b></span><br/>
                        <span align="center" style="font-size: 28px">NO : <t t-esc="o.number"/></span><br/>
                    </t>
                    <t t-if="o.state!='proforma' and o.state!='proforma2' and o.type == 'out_invoice' and o.journal_id.code != 'LL'">
                        <span align="center" style="font-size: 34px"><b>I N V O I C E</b></span><br/>
                        <span align="center" style="font-size: 28px">NO : <t t-esc="o.number"/></span><br/>
                        <span align="center" style="font-size: 16px">NO.FP: <span style="font-size: 16px" t-field="o.efaktur_id.name"/></span><br/>	
                    </t>
                    <t t-if="o.state!='proforma' and o.state!='proforma2' and o.type == 'in_invoice' and o.journal_id.code != 'LL'">
                        <span align="center" style="font-size: 46px"><b>B I L L I N G</b></span><br/>
                        <span align="center" style="font-size: 28px">NO : <t t-esc="o.number"/></span><br/>
                    </t>
                </div>
                <div name="reference"></div>
            </div>

                <div class="heading">
                <!-- Customer -->
                    <div style="font-size:12px; width:40%; border: 0px solid black; height:0px; padding:5px; background-color:white; text-align:left;float:left">
                    </div>
                    <div style="height:0px; width: 18%; color: black; background-color: white; border: 0px solid black; padding: 30px; float:left"/>
                    <div name="invoice_address" style="font-size:; width: 40%; border: 0px solid black; height:130px; padding:3px; background-color:; text-align:left;float:left">
                        <b><font size="30px">DIKIRIM KE : </font></b><br/>
                        <span style="font-size: 12px" t-field="o.partner_id.name"/><br/>
                        <tr>
                            <td style="font-size: 12px; line-height:50px;">
                                <span style="font-size: 12px" t-field="o.partner_id.street"/>
                                <t t-if="o.partner_id.street2">
                                    <span style="font-size: 12px" t-field="o.partner_id.street2"/><br/>
                                </t>
                                <span style="font-size: 12px" t-field="o.partner_id.city"/>
                                <span style="font-size: 12px" t-field="o.partner_id.zip"/>
                                <span style="font-size: 12px" t-field="o.partner_id.state_id"/><br/>
                                <span style="font-size: 12px">NPWP: </span> <span style="font-size: 12px" t-field="o.partner_id.npwp"/><br/>
                            </td>
                        </tr>
                    </div>
                    <br/>
                    <br/>
                    <!-- Table-->
                    <div class="row mt32 mb32">
                        <table style="border: solid black 1px; font-size: 12px;">
                            <t t-set="no" t-value="1"/>
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 5%">NO</th>
                                    <th class="text-center" style="width: 53%;">KETERANGAN</th>
                                    <th class="hidden">Source Document</th>
                                    <th class="text-center" style="width: 9%;">JUMLAH</th>
                                    <th class="text-center" style="width: 15%;">HARGA SATUAN</th>
                                    <th class="text-center" style="width: 8%;">Disc.(%)</th>
                                    <th class="text-center" style="width: 22%">TOTAL</th>
                                </tr>
                            </thead>
                            <tbody style="font-size: 12px; line-height:16px;" class="invoice_tbody">
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td class="text-center"> <span t-esc="no"/> </td>
                                    <td><span t-field="l.name"/></td>
                                    <td class="hidden"><span t-field="l.origin"/></td>
                                    <td class="text-center">
                                        <span t-field="l.quantity"/>
                                        <!--<span t-field="l.uom_id" groups="product.group_uom"/>-->
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                    <t t-set="no" t-value="no+1"/>
                                </tr>
                                <t t-set="tax" t-value="o.amount_tax"/>
                                <t t-if="tax != 0">
                                    <tr>
                                        <td colspan="5" class="text-right" style="no-border; height: 15px;border-bottom:solid black 1px;border-right:solid black 1px;">SUB TOTAL</td>
                                        <td class="text-right" style="border-bottom:solid black 1px;border-right:solid black 1px">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" class="text-right" style="no-border; height: 15px;border-bottom:solid black 1px;border-right:solid black 1pt;">PPN 10%</td>
                                        <td class="text-right" style="border-bottom:solid black 1px;border-right:solid black 1px">
                                            <span t-field="o.amount_tax"/>
                                            <!--<t t-set="hasil" t-value="o.invoice_ids.amount_untaxed * 0.10"/>-->
                                            <!--<span t-esc="'%.2f'%hasil"/>-->
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="5" class="text-right">Total</td>
                                    <td class="text-right"><span t-field="o.amount_total"/></td>
                                </tr>
                                <tr>
                                    <td colspan="6" class="text-left">
                                        <t t-set="bil" t-value="o.amount_total"/>
                                        <p style="font-size:11pt"><b>Terbilang:</b></p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <t t-if="bil != 0 ">
                                            <p style="font-size:11pt"> "<strong> <i><span class="text-center" t-esc="o.terbilang(bil) "/> Rupiah </i></strong>"</p>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                </tr>
                                <tr>
                                    <td colspan="6" class="text-left">
                                        <p t-if="o.comment">
                                            <strong>Keterangan:</strong>
                                            <br/>
                                            <span t-field="o.comment"/>
                                        </p>
                                        <p t-if="o.payment_term_id">
                                            Jatuh Tempo: <span t-field="o.date_due" t-field-options="{&quot;format&quot;:&quot;d MMMM y&quot;}"/>
                                        </p>
                                        <p t-if="o.fiscal_position_id.note">
                                            <strong>Fiscal Position Remark:</strong>
                                            <span t-field="o.fiscal_position_id.note"/>
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div style="font-size:10pt;" class="row mt32 mb32">

						<t t-if="o.state!='proforma' and o.state!='proforma2' and o.type == 'out_invoice'">
							<span>TRANSFER KE:</span><br/>
	                        <span t-field="o.partner_bank_id.partner_id.name"/><br/>
	                        <span t-field="o.partner_bank_id.bank_id.name"/><br/>
	                        <b>No Rekening: <span t-field="o.partner_bank_id.acc_number"/></b><br/>
						</t>
                        <t t-if="o.state!='proforma' and o.state!='proforma2' and o.type == 'in_invoice'">
                        	<spant t-field="o.company_id.bill_report"/>
                        </t>
                        <t t-if="o.state!='proforma' and o.state!='proforma2' and o.type == 'out_invoice'">
                        	<spant t-field="o.company_id.invoice_report"/>
                        </t>
                        <br/>
                        <p>
                            <br/>
                            Jakarta, <span t-field="o.date_invoice" t-field-options="{&quot;format&quot;:&quot;d MMMM y&quot;}"/><br/>
                            Issued by:<br/>
                            <b>PT PROQUAMAN KONSULTAN</b>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>

                            <u><span/>Frida Sani Wihardji</u><br/>
                            <span>Finance Manager</span>
                        </p>
                    </div>
                        </div>
                    </div>

                    <div class="footer">
                        <style type="text/css">
                            .lineHr{
                                    font-size: 1px;
                                    color: rgba(0, 0, 0, 0);
                                    line-height: 1px;
                                    background-color: black;
                                }
                        </style>
                       <!-- <div class="row">
                            <div class="lineHr">.</div>

                            <div class="col-xs-8">
                                <p style="font-size:12px"><b>PERKUMPULAN MANAJEMEN PRODUKTIVITAS DAN MUTU INDONESIA (PM2I)</b>
                                    <br/>Jl. Cempaka Putih Tengah 17C No.7A Cempaka Putih
                                    <br/>Jakarta 10510 - Indonesia
                                </p>
                            </div>
                            <div class="col-xs-4">
                                <p style="font-size:12px">
                                    Phone : 021 - 42887540<br/>
                                    Mobile / WA : 0859 5916 7864 <br/>
                                    Email: clubs@pqm.co.id<br/>
                                    Website: clubs.pqm.co.id
                                </p>
                            </div>
                        </div>-->
                        <p style="font-size:10px" align="center"><br>PQM BUILDING 3rd Floor</br>
                <br>Jl. Cempaka Putih Tengah 17C No.7A, Jakarta 10510, Tel: (62)21 425 1887 | 425 1836 Fax: (62)21 425 4836</br>
                <br>Email: finance@pqm.co.id | Website: http://www.pqm.co.id</br></p>
                    </div>
                </t>
            </t>
    
        </template>
        <template id="account_invoice_report_duplicate_custom" inherit_id="account.report_invoice_document" primary="True">
            <xpath expr="//div[@class='page']" position="inside">
                <div class="watermark">DUPLICATE</div>
            </xpath>
        </template>

    </data>
</openerp>
