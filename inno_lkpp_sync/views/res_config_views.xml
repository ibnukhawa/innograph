<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_general_configuration" model="ir.ui.view">
        <field name="name">General Settings</field>
        <field name="model">base.config.settings</field>
        <field name="inherit_id" ref="base_setup.view_general_configuration"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <group name="LKPP" string="LKPP API Key Configuration" groups="base.group_system">
                    <field name="lkpp_category_key"/>
                    <field name="lkpp_uom_key"/>
                    <field name="lkpp_manufacture_key"/>
                    <field name="lkpp_currency_key"/>
                    <field name="lkpp_secretkey"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
