<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website_view_form" model="ir.ui.view">
        <field name="name">website.view.form</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='social_media']/group[@name='social_media']" position="inside">
                <field name="social_instagram" placeholder="Link to Your Instagram Account"/>
            </xpath>
        </field>
    </record>
</odoo>
